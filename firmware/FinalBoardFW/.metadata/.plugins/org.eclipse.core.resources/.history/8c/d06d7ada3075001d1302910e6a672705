#define INT_TEMP(x) (x / 2)
/// Fractional part of temperature
#define FRAC_TEMP(x) ((x * 5) % 10)

/// Currently displayed property ID
static mesh_device_properties_t current_property = PRESENT_AMBIENT_TEMPERATURE;

